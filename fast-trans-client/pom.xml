<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>fast-trans</artifactId>
        <groupId>ren.wxyz</groupId>
        <version>0.1</version>
    </parent>

    <groupId>ren.wxyz.ft</groupId>
    <artifactId>fast-trans-client</artifactId>
    <version>0.1</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <finalName>fastTrans</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <filters>
            <filter>src/env/${filter.env}/common.properties</filter>
        </filters>
    </build>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <filter.env>dev</filter.env>
            </properties>
        </profile>
        <profile>
            <id>prd</id>
            <properties>
                <filter.env>prd</filter.env>
            </properties>
        </profile>
    </profiles>
</project>
